<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('./includes/navigation.ejs') %>

    <main>
    
        <% if(errorMessage) { %>
            <div class="error-message"><%= errorMessage %></div>
        <% } %>    
        <div class="grid">
            <form class="card login-form" action="/spotify/clientLogin" method="POST" novalidate>
                <span class="title">Inicio de sesión de Spotify</span>
                <div class="form-control">
                    <label for="user">Usuario</label>
                    <input type="user" name="user" id="user" value="<%= userData.display_name%>">
                </div>
                <div class="form-control">
                    <label for="password">Contraseña</label>
                    <input class="" type="password" name="password" id="password" value="">
                </div>
    
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="userData" value="<%= JSON.stringify(userData) %>">
                <input type="hidden" name="access_token" value="<%= access_token %>">
                <input type="hidden" name="refresh_token" value="<%= refresh_token %>">
    
                <button class="btn" type="submit">Iniciar sesión</button>
            </form>
        </div>

    </main>
<%- include('./includes/end.ejs') %>
